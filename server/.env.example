# Database (same as clubsteward - you can copy admin/.env from clubsteward and set DB_SCHEMA=teamtask_hub)
DB_HOST=server.kindredvineyards.com
DB_PORT=5432
DB_DATABASE=kindredv_kindred
DB_USER=kindredv_master
DB_PASSWORD=your_password
DB_SCHEMA=teamtask_hub

# JWT
JWT_SECRET=your_jwt_secret_min_32_chars

# Optional: Square Team API (fetch active users)
SQUARE_ACCESS_TOKEN=
SQUARE_ENV=production

# Optional: Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Optional: Email for password reset (SMTP)
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_SECURE=false
# MAIL_USER=
# MAIL_PASS=
# MAIL_FROM=noreply@yourdomain.com

# Base URL for reset links (e.g. https://yourapp.com or http://localhost:5173)
APP_BASE_URL=http://localhost:5173

PORT=3001
